<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/bet_preview"
     android:layout_width="fill_parent"
     android:layout_height="80dp"
     android:background="@color/white"
     android:clickable="true"
     android:gravity="center_vertical"
     android:onClick="singleBet"
     android:orientation="horizontal" >

    <ImageView
        android:id="@+id/profile_pic"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:src="@drawable/abc_ab_bottom_solid_light_holo" />

    <TextView
        android:id="@+id/friend_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:hint="Name"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/vs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:hint="vs"
        android:text="vs"
        android:textSize="13sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/friend_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:hint="Name"
        android:textSize="13sp"
        android:textStyle="bold" />

<ImageView
    android:id="@+id/profile_pic2"
    android:layout_width="50dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:src="@drawable/abc_ab_bottom_solid_light_holo" />

<AbsoluteLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|right" >

    <TextView
        android:id="@+id/team1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_x="5dp"
        android:layout_y="5dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:hint="Team1"
        android:textSize="11sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/vs2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_x="18dp"
        android:layout_y="18dp"
        android:background="@color/white"
        android:gravity="center_vertical|center_horizontal"
        android:hint="vs"
        android:text="vs"
        android:textSize="11sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/team2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_x="5dp"
        android:layout_y="35dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:hint="Team2"
        android:textSize="11sp"
        android:textStyle="bold" />
</AbsoluteLayout>

